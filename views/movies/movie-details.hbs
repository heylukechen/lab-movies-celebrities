<h1>Movie detail</h1>
<h2>{{foundMovie.title}}</h2>
<h3>{{foundMovie.genre}}</h3>
<h5>{{foundMovie.plot}}</h5>
{{#each foundMovie.cast}}
  <h5>{{this.name}}</h5>
  <h6>{{this.occupation}}</h6>
  <h6>{{this.catchPhrase}}</h6>
{{/each}}

<a href="/movies/{{foundMovie._id}}/edit"><button>Edit this movie</button></a>

<form action="/movies/{{foundMovie._id}}/delete" method="post">
  <button>Delete this movie</button>
</form>